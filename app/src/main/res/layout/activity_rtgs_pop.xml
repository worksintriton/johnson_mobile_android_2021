<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RTGS_PopActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_bar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_back_arrow"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RTGS List"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/new_rounded_corner_btn_white"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="false"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/ic_loctn_search" />


                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/img_search"
                    android:background="@null"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:hint="@string/search"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/gray_btn_bg_pressed_color"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp"
                    tools:ignore="Autofill,LabelFor,TextFields" />
                <ImageView
                    android:id="@+id/img_clearsearch"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/image"
                    android:src="@drawable/ic_delete"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="URT No"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView1_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Bank_Details"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"/>
        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView2_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="Amount"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView3_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Customer Name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView4_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="IFSC Code"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textView5_pop"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="Balance Amt"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>