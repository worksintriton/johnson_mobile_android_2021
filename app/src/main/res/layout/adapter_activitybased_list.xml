<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   android:layout_marginStart="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
          android:layout_margin="@dimen/_10dp">

            <TextView
                android:id="@+id/txt_serv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sourcesanspro_regular"
                android:maxLines="1"
                android:text="@string/app_name_with_login"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_lbl_noofpending"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_serv_title"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/sourcesanspro_regular"
                android:maxLines="1"
                android:text="@string/noofpedning"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:layout_toEndOf="@+id/txt_lbl_noofpending"
                android:id="@+id/txt_noofpending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_serv_title"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/sourcesanspro_regular"
                android:maxLines="1"
                android:text="@string/noofpedning"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/_10dp"/>

            <TextView
                android:id="@+id/txt_lbl_noofnew"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_noofpending"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/sourcesanspro_regular"
                android:maxLines="1"
                android:text="@string/noofnew"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:layout_toEndOf="@+id/txt_lbl_noofnew"
                android:layout_marginStart="@dimen/_10dp"
                android:id="@+id/txt_noofnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_noofpending"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/sourcesanspro_regular"
                android:maxLines="1"
                android:text="@string/noofnew"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/icn_rightarrowend" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>