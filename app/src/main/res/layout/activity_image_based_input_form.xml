<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/txt_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sourcesanspro_regular"
            android:padding="15dp"
            android:text="@string/info"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <TextView
                android:id="@+id/txt_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sourcesanspro_regular"
                android:padding="15dp"
                android:text="Exit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </RelativeLayout>


    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corners_button"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/white"
                        android:text="C4"
                        android:padding="10dp"
                       android:gravity="center"
                        android:textAlignment="center"
                        android:layout_alignParentStart="true"

                        />
                    <TextView
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corners_button"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="ICB"
                        android:padding="10dp"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corners_button"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="C3"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        />




                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/child_back_ground"
                        android:hint="Text 1"
                        android:inputType="number"
                        android:maxWidth="50sp"
                        android:minWidth="50sp"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:textColor="#FAFAF4"
                        android:textColorHighlight="#c30505" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <EditText
                            android:id="@+id/edt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/child_back_ground"
                            android:hint="Text 1"
                            android:inputType="number"
                            android:maxWidth="50sp"
                            android:minWidth="50sp"
                            android:selectAllOnFocus="true"
                            android:text=""
                            android:textColor="#FAFAF4"
                            android:textColorHighlight="#c30505" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_toStartOf="@+id/edt1"
                            android:background="@drawable/child_back_ground"
                            android:hint="Text 1"
                            android:inputType="number"
                            android:maxWidth="50sp"
                            android:minWidth="50sp"
                            android:selectAllOnFocus="true"
                            android:text=""
                            android:textColor="#FAFAF4"
                            android:textColorHighlight="#c30505" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corners_button"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="ICL"
                        android:padding="10dp"
                        android:layout_marginStart="@dimen/_30dp"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <TextView
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corners_button"
                            android:selectAllOnFocus="true"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:text="ICR"
                            android:padding="10dp"
                            android:layout_marginStart="@dimen/_30dp"
                            />


                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corners_button"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="C1"
                        android:padding="10dp"
                        android:layout_marginStart="@dimen/_30dp"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/child_back_ground"
                            android:hint="Text 1"
                            android:inputType="number"
                            android:maxWidth="50sp"
                            android:minWidth="50sp"
                            android:selectAllOnFocus="true"
                            android:text=""
                            android:textColor="#FAFAF4"
                            android:textColorHighlight="#c30505" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/child_back_ground"
                        android:hint="I/P"
                        android:inputType="number"
                        android:maxWidth="50sp"
                        android:minWidth="50sp"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:textColor="#FAFAF4"
                        android:textColorHighlight="#c30505" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/child_back_ground"
                            android:hint="I/P"
                            android:inputType="number"
                            android:maxWidth="50sp"
                            android:minWidth="50sp"
                            android:selectAllOnFocus="true"
                            android:text=""
                            android:textColor="#FAFAF4"
                            android:textColorHighlight="#c30505" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-20dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_corners_button"
                        android:selectAllOnFocus="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="C1"
                        android:padding="10dp"
                        android:layout_marginStart="@dimen/_30dp"
                        />




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_corners_button"
                            android:selectAllOnFocus="true"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:text="C2"
                            android:padding="10dp"
                            android:layout_marginStart="@dimen/_30dp"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>


        </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_save2"
            android:layout_width="@dimen/_200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/blue_button_background"
            android:elevation="1dp"
            android:stateListAnimator="@animator/button_elevation"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
