<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_text_color"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txt_serv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sourcesanspro_regular"
                android:maxLines="1"
                android:text="@string/app_name_with_login"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_serv_updatedat"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_serv_title"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/sourcesanspro_regular"
                android:maxLines="1"
                android:text="@string/app_name_with_login"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_serv_createdat"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_serv_updatedat"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/sourcesanspro_regular"
                android:maxLines="1"
                android:text="@string/app_name_with_login"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center|end"
                app:srcCompat="@drawable/icn_rightarrowend" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/txt_serv_createdat"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>